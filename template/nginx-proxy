server {

    listen [::]:80;
    listen 80;

    server_name {S_DOMAIN};

    root /var/www/{S_USER_DIR}/{S_DOMAIN}/web/;

    location / {
        proxy_pass http://127.0.0.1:8000;
    }

    location ^~ /.well-known/acme-challenge/ {
        access_log off;
        log_not_found off;
        root /var/www/{S_USER_DIR}/{S_DOMAIN}/web/;
        autoindex off;
        index index.html;
        try_files $uri $uri/ =404;
    }

}


